package com.ait.ar.bean;

import java.util.Calendar;
import java.util.GregorianCalendar;

public class ArMonth {

    public String getArMonth() {
        String arMonth = null;
        Calendar currentDay = new GregorianCalendar();
        String year = currentDay.get(Calendar.YEAR) + "";
        String month = currentDay.get(Calendar.MONTH) + 1 + "";
        month = "0" + month;
        arMonth = year + month.substring(month.length() - 2, 2);
        return arMonth;
    }

