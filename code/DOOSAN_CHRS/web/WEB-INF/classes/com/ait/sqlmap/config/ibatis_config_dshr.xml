<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//iBATIS.com//DTD SQL Map Config 2.0//EN" "http://www.ibatis.com/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
	
	<!-- 配置SQL MAP CLIENT 参数 -->
	<settings cacheModelsEnabled="true" enhancementEnabled="true"
		lazyLoadingEnabled="true" maxRequests="128" maxSessions="80"
		maxTransactions="60" useStatementNamespaces="true" />

	<!-- 配置SQL MAP CLIENT 事物管理器 (JNDI方式获得) -->
	
	<transactionManager type="JDBC" >
		<!-- DSHR韩国数据库配置 -->
		<dataSource type="JNDI">
			<property name="DataSource" value="java:comp/env/jdbc/DSHR" />
		</dataSource>
	</transactionManager> 

	<sqlMap resource="com/ait/sqlmap/config/ibatis_common.xml" />
	
	<sqlMap resource="com/ait/sqlmap/template/sql/sql.xml" /> 
	
	<sqlMap resource="com/ait/pa/sql/dshr/sql.xml" /> 
     
</sqlMapConfig>