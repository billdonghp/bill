<script type="text/javascript">
    apiready = function() {
        loginState("main_frame");
        pageInit();
        getJBList();
    };

    function pageInit() {
        //下拉
        api.setCustomRefreshHeaderInfo({
            bgColor: '#f0f0f0'
        }, function() {
            getJBList();
        });

        //手动下拉
        api.addEventListener({
            name: 'headerLoading'
        }, function(ret, err) {
            api.refreshHeaderLoading();
        });
    }

    function getJBList() {
        fnPost('badges', "", true, function(ret, err) {
            api.refreshHeaderLoadDone();
            if (ret && ret.resultCode == 200) {
                if (ret.data) {
                    jbList(ret);
                }
            } else {
                api.toast({
                    msg: '网络不佳，请重试',
                    duration: 2000,
                    location: 'bottom'
                });
            }
        });
    }

    function jbList(data_) {
        var list = $api.byId('list');
        var tempFn = doT.template($api.byId('template').innerHTML);
        var resultHTML = tempFn(data_);
        $api.html(list, resultHTML);
        api.parseTapmode();
        fnReadyOpenWin();
    }
</script>

